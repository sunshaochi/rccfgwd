<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <!--android:background="@drawable/white_radio"-->

    <LinearLayout
        android:gravity="center"
        android:paddingRight="15dp"
        android:id="@+id/ll_item"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:minHeight="170dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_title"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_proname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="航交所联商收益权"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:visibility="gone"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:background="@drawable/yello_stork"
                    android:id="@+id/tv_xsz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约中"
                    android:textColor="#ffb54c"
                    android:textSize="12sp" />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_sjtime"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计上架时间：2018-09-20 10:00"
                    android:textColor="#999999"
                    android:textSize="12sp" />


            </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zt"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/yello_stork"
            android:textColor="#f8b444"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_proname"
            android:text="预约中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.6"
                        android:textColor="@color/bg_end"
                        android:textSize="28sp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/red_2"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_syname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"
                        android:textColor="@color/black_3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_dw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/black_3"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_synum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="到期支付本金收益"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jjbutton"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="分享"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="预约108人"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:progress="0"
                android:layout_weight="1"
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_states" >
            </ProgressBar>

            <TextView
                android:id="@+id/tv_pb"
                android:layout_marginLeft="10dp"
                android:textColor="@color/bg_end"
                android:textSize="12sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_height="10sp"
        style="@style/view_line"></View>


</LinearLayout>
