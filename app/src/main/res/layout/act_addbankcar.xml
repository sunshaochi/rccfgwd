<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <ScrollView
        android:background="@color/gray_bg"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.rmwl.rcchgwd.view.CommonView
                android:id="@+id/com_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centText="张三"
                app:centTextColor="@color/black_1"
                app:centTextSize="16sp"
                app:desText="姓名"
                app:desTextColor="@color/black_1"
                app:desTextSize="16sp"
                app:isShowArraw="false"
                app:isShowCategoryImage="false"
                app:isShowTextCent="true"
                app:isShowTextNotes="false"></com.rmwl.rcchgwd.view.CommonView>

            <View style="@style/view_line"></View>

            <com.rmwl.rcchgwd.view.CommonView
                android:id="@+id/com_zjlx"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centText="身份证"
                app:centTextColor="@color/black_1"
                app:centTextSize="16sp"
                app:desText="证件类型"
                app:desTextColor="@color/black_1"
                app:desTextSize="16sp"
                app:isShowArraw="false"
                app:isShowCategoryImage="false"
                app:isShowTextCent="true"
                app:isShowTextNotes="false"></com.rmwl.rcchgwd.view.CommonView>

            <View style="@style/view_line"></View>

            <com.rmwl.rcchgwd.view.CommonView
                android:id="@+id/com_zjhm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centText="360100000000"
                app:centTextColor="@color/black_1"
                app:centTextSize="16sp"
                app:desText="证件号码"
                app:desTextColor="@color/black_1"
                app:desTextSize="16sp"
                app:isShowArraw="false"
                app:isShowCategoryImage="false"
                app:isShowTextCent="true"
                app:isShowTextNotes="false"></com.rmwl.rcchgwd.view.CommonView>

            <View style="@style/view_line"></View>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.rmwl.rcchgwd.view.CommonView
                android:id="@+id/com_khh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centText="请选择银行"
                app:centTextColor="@color/black_2"
                app:centTextSize="16sp"
                app:desText="开户行"
                app:desTextColor="@color/black_1"
                app:desTextSize="16sp"
                app:isShowArraw="true"
                app:isShowCategoryImage="false"
                app:isShowTextCent="true"
                app:isShowTextNotes="false"></com.rmwl.rcchgwd.view.CommonView>

            <View style="@style/view_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="账号"
                    android:textColor="@color/black_1"
                    android:textSize="15sp" />

                <EditText
                    android:maxLength="19"
                    android:layout_weight="2"
                    android:digits="0123456789"
                    android:id="@+id/et_yhzh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="银行账号"
                    android:textColor="@color/black_1"
                    android:textSize="15sp" />

            </LinearLayout>

            <View style="@style/view_line"></View>

            <com.rmwl.rcchgwd.view.CommonView
                android:id="@+id/com_khd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centText="请选择开户地"
                app:centTextColor="@color/black_2"
                app:centTextSize="16sp"
                app:desText="开户地"
                app:desTextColor="@color/black_1"
                app:desTextSize="16sp"
                app:isShowArraw="true"
                app:isShowCategoryImage="false"
                app:isShowTextCent="true"
                app:isShowTextNotes="false"></com.rmwl.rcchgwd.view.CommonView>

            <View style="@style/view_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="开户行网点"
                    android:textColor="@color/black_1"
                    android:textSize="15sp" />

                <EditText
                    android:textColorHint="@color/black_2"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:layout_weight="2"
                    android:id="@+id/et_khhwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="输入银行网点"
                    android:textColor="@color/black_1"
                    android:textSize="15sp" />

            </LinearLayout>

            <View style="@style/view_line"></View>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_qd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    </ScrollView>
</LinearLayout>