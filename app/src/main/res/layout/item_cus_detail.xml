        <LinearLayout
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_sf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_two"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_sf"
                                android:lines="1"
                                android:layout_weight="1"
                                android:textColor="@color/black_5"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_wy"
                                android:textColor="@color/black_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="万元"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <View
                            android:visibility="gone"
                            android:id="@+id/view_line"
                            android:background="@color/black_2"
                            android:layout_centerVertical="true"
                            style="@style/view_line"></View>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:id="@+id/ll_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order_money"
                                android:lines="1"
                                android:layout_weight="1"
                                android:textColor="@color/bg_end"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp" />

                            <TextView
                                android:text="万元"
                                android:textSize="14sp"
                                android:textColor="@color/bg_end"
                                style="@style/tv_12_red_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </RelativeLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_money_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_2"
                    android:textSize="12sp"
                    android:text="到账金额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_order_yearly"
                        android:layout_marginLeft="5dp"
                        android:text="9999"
                        android:textSize="15sp"
                        style="@style/tv_18_red_text"
                        android:textColor="@color/text_book_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="%"
                        android:textSize="14sp"
                        style="@style/tv_12_red_text"
                        android:textColor="@color/text_book_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="预期年化"
                    style="@style/tv_12_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_invest_time"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="9999"
                        android:textSize="15sp"
                        android:textColor="@color/black_1"
                        style="@style/tv_18_red_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_term"
                        android:text="天"
                        android:textSize="14sp"
                        android:textColor="@color/black_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="产品期限"
                    style="@style/tv_12_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_botem"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_income"
                android:text="已兑付金额：0.00元"
                style="@style/tv_12_text"
                android:textColor="@color/black_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black_1"
                android:id="@+id/tv_next_time"
                android:text="未兑付金额：0.00元"
                style="@style/tv_12_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
