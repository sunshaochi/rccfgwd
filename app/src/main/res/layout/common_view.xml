<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/rl_bg"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <ImageView
        android:src="@mipmap/yhk"
        android:id="@+id/ivCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        />

    <TextView
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:id="@+id/tvCommon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivCommon"
        android:text="开户行网点" />

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_weight="2"
        android:text="张三"
        android:layout_centerInParent="true"
        android:id="@+id/tv_centtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="right"
            android:text="haha"
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="gone"
            android:textColor="@color/black_2"
            android:textSize="11sp"
            android:text="(只显示整数部分)"
            android:id="@+id/tvNotesBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/myfraright"
        />


</LinearLayout>