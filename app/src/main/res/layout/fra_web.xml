<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="20dp">
    <TextView
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="推荐好友投资赚佣金"
        android:textColor="#333333"
        android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_states" >
    </ProgressBar>


    <com.tencent.smtt.sdk.WebView
        android:visibility="gone"
        android:id="@+id/wb_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.tencent.smtt.sdk.WebView>

    <RelativeLayout
        android:background="@mipmap/beij"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_code"
            android:background="@mipmap/kaka"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                style="@style/tv_14_text"
                android:textColor="@color/black_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的推荐码"/>
            <TextView
                android:id="@+id/tv_code"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                style="@style/tv_14_text"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <ImageView
                android:id="@+id/iv_code"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_gravity="center_horizontal"
                style="@style/tv_14_text"
                android:textColor="@color/black_3"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请链接24小时内有效"/>
            <View
                android:layout_marginTop="5dp"
                style="@style/view_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@mipmap/tuij"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐好友"
                android:textSize="16sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_num"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/ll_code"
            android:background="@drawable/white_radio"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_person_num"
                    android:layout_gravity="center_horizontal"
                    style="@style/tv_bold_name"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    style="@style/tv_12_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐客户(人)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_money_num"
                    android:layout_gravity="center_horizontal"
                    style="@style/tv_bold_name"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    style="@style/tv_12_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资总额（万元）"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_below="@+id/ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐仅面向合格投资者，严禁转发分享到朋友圈、微信群等非特定人群"/>
    </RelativeLayout>


</LinearLayout>