<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="顾问审核"
        android:textColor="@color/black_1"
        android:textSize="26sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

             <RelativeLayout
                 android:layout_marginRight="30dp"
                 android:layout_marginLeft="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/tv_name"
                     android:textColor="@color/black_1"
                     android:textSize="16sp"
                     android:text="姓名:"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:maxWidth="180dp"
                     android:ellipsize="end"
                     android:singleLine="true"
                     android:id="@+id/tv_namet"
                     android:layout_marginLeft="30dp"
                     android:layout_toRightOf="@id/tv_name"
                     android:textColor="@color/black_1"
                     android:textSize="16sp"
                     android:text=""
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:layout_marginLeft="10dp"
                     android:layout_toRightOf="@id/tv_namet"
                     android:paddingBottom="1dp"
                     android:paddingTop="1dp"
                     android:paddingRight="12dp"
                     android:paddingLeft="12dp"
                     android:background="@drawable/audit"
                     android:id="@+id/tv_ysm"
                     android:textColor="@color/line_three"
                     android:textSize="12sp"
                     android:text="已实名"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />


             </RelativeLayout>

             <View
                 android:layout_marginRight="30dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginTop="10dp"
                 style="@style/view_line"></View>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_zjlx"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text="证件类型:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_zjlxt"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_zjlx"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                style="@style/view_line"></View>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_zjno"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text="证件号码:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_zjnot"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_zjno"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>

            <View
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                style="@style/view_line"></View>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_phone"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text="电话号码:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_phonet"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_phone"
                    android:textColor="@color/black_1"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                style="@style/view_line"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/registyzm" />


                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:id="@+id/et_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入手机验证码"
                    android:padding="15dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_btyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"></View>

            <RelativeLayout
                android:id="@+id/rl_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_sf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/registsf" />

                <TextView
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:hint="请选择身份"
                    android:id="@+id/tv_sf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_sf"
                    android:background="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_jt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/myfraright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:text="上传照片"
                android:textColor="@color/black_2"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_photo"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="30dp"
                android:text="*请上传您的工作名片/工牌照/身份证"
                android:textColor="@color/bg_end"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_regist"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="同意协议并提交"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:button="@drawable/check_box"
                    android:checked="true"
                    android:id="@+id/ck_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_xy"
                    android:textColor="@color/black_2"
                    android:textSize="10sp"
                    android:text="我已经阅读并同意《用户注册协议》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>