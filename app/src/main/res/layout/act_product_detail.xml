<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <RelativeLayout
            android:id="@+id/rl_base"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_base"
                android:textColor="@color/bg_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textSize="14sp" />
            <View
                android:id="@+id/view_base"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:background="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_message"
                android:textColor="@color/bg_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息披露"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_message"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:background="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/act_product_base"/>
        <include layout="@layout/act_product_message"/>
    </RelativeLayout>

</LinearLayout>
