<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_one"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_radio"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textStyle="bold"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@color/black_1"
            android:textSize="12sp"
            android:text="利息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lx"
            android:ellipsize="end"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="right"
            android:textColor="@color/black_2"
            android:textSize="14sp"
            android:text="128"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_two"
        android:background="@drawable/white_radio"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_jdname"
                android:textStyle="bold"
                android:textColor="@color/black_1"
                android:textSize="12sp"
                android:text="第一阶段"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_jdlx"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="@color/bg_end"
                android:textSize="14sp"
                android:text="9999.00元"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View style="@style/view_line"></View>


        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black_3"
                    android:textSize="14sp"
                    android:text="金额:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_je"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black_1"
                    android:textSize="14sp"
                    android:text="8481.00万"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black_3"
                    android:textSize="14sp"
                    android:text="利率:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_ll"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black_1"
                    android:textSize="14sp"
                    android:text="848万848万848万848万"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>

        <View style="@style/view_line"></View>

        <TextView
            android:id="@+id/tv_time"
            android:padding="15dp"
            android:textColor="@color/black_3"
            android:text="2018-09-10至2018-09-30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>