<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="注册"
        android:textColor="@color/black_1"
        android:textSize="26sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_lxr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/registlxr" />

                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:id="@+id/et_lxr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_lxr"
                    android:background="@color/white"
                    android:inputType="textPersonName"
                    android:hint="请输入联系人真实姓名"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/sj" />

                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_sj"
                    android:background="@color/white"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mima" />

                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:layout_weight="1"
                    android:id="@+id/et_mm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_mm"
                    android:digits="@string/filter_pwd"
                    android:background="@color/white"
                    android:hint="字母、数字6-20位组合"
                    android:maxLength="20"
                    android:textSize="16sp" />
                <!--android:inputType="textPassword"-->


                <ImageView
                    android:id="@+id/iv_showorno"
                    android:src="@mipmap/yanjing"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>


            <LinearLayout
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_viewline"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view_one"
                    android:background="@color/line_intensity"
                    android:layout_width="60dp"
                    android:layout_height="5dp"></View>

                <View
                    android:layout_marginLeft="5dp"
                    android:id="@+id/view_two"
                    android:background="@color/line_intensity"
                    android:layout_width="60dp"
                    android:layout_height="5dp"></View>

                <View
                    android:layout_marginLeft="5dp"
                    android:id="@+id/view_three"
                    android:background="@color/line_intensity"
                    android:layout_width="60dp"
                    android:layout_height="5dp"></View>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_intensity"
                    android:textColor="@color/text_intensity"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="密码强度低"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_select"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_zw"
                        android:src="@mipmap/gou"
                        android:layout_width="8dp"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/tv_kong"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_zw"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_intensity"
                        android:textSize="11sp"
                        android:text="不能有空格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_zwt"
                        android:src="@mipmap/gou"
                        android:layout_width="8dp"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/tv_chang"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_zwt"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_intensity"
                        android:textSize="11sp"
                        android:text="长度为6-20个字符"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_zwthre"
                        android:src="@mipmap/gou"
                        android:layout_width="8dp"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/tv_dxx"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_zwthre"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_intensity"
                        android:textSize="11sp"
                        android:text="必须包括字母大小写加数字"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/registyzm" />


                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:id="@+id/et_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入手机验证码"
                    android:padding="15dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_btyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"></View>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_sf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/registsf" />

                <TextView
                    android:textColor="@color/black_2"
                    android:text="请选择身份"
                    android:id="@+id/tv_sf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_sf"
                    android:background="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_jt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/myfraright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:visibility="gone"
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/iv_yqm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/sj" />

                <EditText
                    android:textColor="@color/black_1"
                    android:textColorHint="@color/black_2"
                    android:id="@+id/et_yqm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_yqm"
                    android:background="@color/white"
                    android:hint="请输入团队邀请码(非必填)"
                    android:inputType="number"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                android:visibility="gone"
                style="@style/view_line"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="30dp"
                android:text="上传照片"
                android:textColor="@color/black_2"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_photo"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="30dp"
                android:text="*请上传您的工作名片/工牌照/身份证"
                android:textColor="@color/bg_end"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_regist"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="同意协议并注册"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:button="@drawable/check_box"
                    android:checked="true"
                    android:id="@+id/ck_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_xy"
                    android:textColor="@color/black_2"
                    android:textSize="10sp"
                    android:text="我已经阅读并同意《用户注册协议》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>