<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"

    android:layout_height="match_parent">

    <include layout="@layout/title_act_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入您真实姓名"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/view_line"></View>
        <LinearLayout
            android:id="@+id/ll_zjlx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="证件类型"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

            <TextView
                android:text="身份证"
                android:layout_weight="1"
                android:id="@+id/tv_zjlx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_jt"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/myfraright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View style="@style/view_line"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="证件号码"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

            <EditText
                android:digits="@string/filter_vcode"
                android:maxLength="18"
                android:id="@+id/et_zjhm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入您的证件号码"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_qd"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>




</LinearLayout>