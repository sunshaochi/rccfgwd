<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/white_radio"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@mipmap/yuan_bg"
                    android:id="@+id/civ_head"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_name"
                    android:text="张少峰"
                    style="@style/tv_bold_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/user_phone"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="18000000000"
                    style="@style/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_cp_name"
            android:text="恒宇第28期"
            style="@style/tv_bold_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_top"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="申购时间"
                        style="@style/tv_12_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_invest_time"
                            android:layout_gravity="center_vertical"
                            android:text="9999"
                            android:textSize="15sp"
                            style="@style/tv_bold_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:text="万元"
                            style="@style/tv_12_red_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="金额"
                        style="@style/tv_12_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_invest"
                            android:layout_gravity="center_vertical"
                            android:text="9999"
                            android:textSize="15sp"
                            style="@style/tv_bold_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="万元"
                            android:textColor="@color/black_1"
                            style="@style/tv_12_red_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_top_time"
                android:layout_below="@+id/ll_top"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="划款开放时间：2018-09-10  10:00--17:00"
                style="@style/tv_12_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_below_time"
                android:layout_below="@+id/tv_top_time"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="划款开放时间：2018-09-10  10:00--17:00"
                style="@style/tv_12_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/iv_status"
                android:layout_alignParentRight="true"
                android:layout_width="44dp"
                android:layout_height="16dp"
                android:background="@mipmap/zt"/>
        </RelativeLayout>

        <View style="@style/view_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_msg"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/duanx"/>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="发短信"
                    style="@style/tv_14_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_call"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/diahua"/>

                <TextView
                    android:id="@+id/tv_call_phone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="打电话"
                    style="@style/tv_14_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
